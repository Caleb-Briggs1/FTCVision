<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageOp"
        android:src="@mipmap/icon_code"
        android:tint="@color/error_orange"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/textOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Op Mode\nNot selected"
        android:paddingTop="4dp"
        android:layout_alignParentTop="true"
        android:paddingLeft="6dp"
        android:layout_toRightOf="@+id/imageOp"
        android:layout_toLeftOf="@+id/buttonOpSelect"
        android:layout_toStartOf="@+id/buttonOpSelect" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:id="@+id/buttonOpStop"
        android:src="@mipmap/icon_stop"
        android:background="@color/transparent_color"
        android:tint="@color/error_orange"
        android:scaleType="fitCenter"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="-3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:id="@+id/buttonOpStart"
        android:src="@mipmap/icon_play"
        android:background="@color/transparent_color"
        android:tint="@color/green"
        android:scaleType="fitCenter"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="-3dp"
        android:layout_toLeftOf="@+id/buttonOpStop"
        android:layout_toStartOf="@+id/buttonOpStop"
        android:visibility="invisible" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:id="@+id/buttonOpSelect"
        android:src="@mipmap/icon_morehoriz"
        android:background="@color/transparent_color"
        android:tint="@color/button"
        android:scaleType="fitCenter"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="-3dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonOpStart"
        android:layout_toStartOf="@+id/buttonOpStart"
        android:visibility="invisible" />

</RelativeLayout>