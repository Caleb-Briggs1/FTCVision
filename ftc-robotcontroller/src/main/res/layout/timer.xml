<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageTimer"
        android:src="@mipmap/icon_timeroff"
        android:tint="@color/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/textTimer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Timer\nNot set"
        android:paddingTop="4dp"
        android:layout_alignParentTop="true"
        android:paddingLeft="6dp"
        android:layout_toRightOf="@+id/imageTimer"
        android:layout_toEndOf="@+id/imageTimer" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTimer"
        android:src="@mipmap/icon_timer"
        android:background="@color/transparent_color"
        android:tint="@color/button"
        android:scaleType="fitCenter"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="-3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textTimer" />

</RelativeLayout>